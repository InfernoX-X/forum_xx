<!DOCTYPE html>
<html>
<head>
  <title>Sign In | <%= siteTitle %></title>
  <%- include("../partials/variables") %>
</head>
<body>
  
<style>
    body{
        font-family: var(--font-family);
        text-transform: uppercase;
        letter-spacing: 1px; 
    }

    .authContainer{
        position: relative;
        background-color: #1b1b1b;
        width: 100%;
        height: 100vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        background-position: center;
        background-size: cover;
    }

    .authForm span{
        color: var(--white);
        font-size: 0.8rem;
        font-weight: normal;
        letter-spacing: 2px;
        margin-top: 10px;
    }

    .authForm span a{
        color: var(--white);
    }

    .authContainer::before{
        content: "";
        width: 100%;
        height: 100%;
        position: absolute;
        top: 0;
        left: 0;
        background-color: rgba(20, 20, 20, 0.8);
    }

    h3#title{
        font-size: 3rem;
        margin-bottom: 20px;
        color: var(--white);
        z-index: 4;
        text-transform: uppercase;
        letter-spacing: 4px;
    }

    .authForm{
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        z-index: 3;
    }

    .authForm input{
        width: 300px;
        background-color: transparent;
        padding: 4px;
        padding-bottom: 7px;
        font-size: 1.2rem;
        border: none;
        border-bottom: 2px solid var(--accent);
        margin-bottom: 15px;
        outline: none;
        color: var(--white);
        letter-spacing: 1px;
        font-weight: bold;
    }

    .authForm input::placeholder{
        color: rgba(255,255,255, 0.8);
    }

    .authForm button{
        margin-top: 20px;
        padding: 10px 35px;
        border-radius: 30px;
        color: var(--white);
        border: 1px solid var(--white);
        background-color: transparent;
        font-size: 1.2rem;
        font-weight: bold;
        letter-spacing: 1px;
        cursor: pointer;
        transition: all 0.3s ease-out;
    }

    .authForm button:hover{
        border-radius: 10px;
        letter-spacing: 2px;
    }
  </style>

  <main class="authContainer" style="background-image: url('https://images.pexels.com/photos/1421903/pexels-photo-1421903.jpeg');">
    <form action="/login" id="signInForm" class="authForm" method="post">

      <h3 id="title">Login</h3>

      <input type="text" id="username" placeholder="Username" name="username" required>

      <input type="password" id="password" placeholder="Password" name="password" required>
      
      <span>Don't have an account? <a href="/register">Sign Up</a></span>

      <button type="submit">Login</button>
    </form>
  </main>

  <script>
    const form = document.querySelector('form#signInForm');
    const btn = form.querySelector('button');

    form.addEventListener('submit', async (event) => {
      event.preventDefault();

      btn.disabled = true;
      btn.innerText = "Authenticating...";

      const formData = new FormData(form);
      const payload = Object.fromEntries(formData.entries());

      try {
        const response = await fetch('/login', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(payload),
        });

        if (response.ok) {
          const token = response.headers.get('Authorization');
          if (token) localStorage.setItem('authToken', token);
          window.location.href = '/';
        } else {
          const data = await response.json();
          alert("Login failed");
          btn.disabled = false;
          btn.innerText = "Login";
        }
      } catch (error) {
        alert("Network error. Please check your connection.");
        btn.disabled = false;
        btn.innerText = "Login";
      }
    });
  </script>

</body>
</html>