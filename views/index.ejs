<script>
    const toggleView = (name) => {
        const n = name.replace(/[^\w\s]/gi, '').replace(/\s+/g, '-').toLowerCase()
        const list_ = document.getElementsByClassName(`list-${n}`);
        let currentValue = document.getElementById(`span-${n}`).innerText;

        if(currentValue == "-"){
            for (let i = 0; i < list_.length; i++) {
                const list = list_[i];
                list.style.display = "none";
                document.getElementById(`span-${n}`).innerText = "+";
            }
            
        }else{
            for (let i = 0; i < list_.length; i++) {
                const list = list_[i];
                list.style.display = "";
                document.getElementById(`span-${n}`).innerText = "-";
            }
        }

    };

</script>
<script>
    const searchInput = document.getElementById('searchInput');
    const forumRows = document.querySelectorAll('.forum-row');
    const categories = document.querySelectorAll('.category-section');
    const noResults = document.getElementById('noResults');

    searchInput.addEventListener('input', function(e) {
        const query = e.target.value.toLowerCase();
        let anyVisible = false;

        // Loop through every forum row
        forumRows.forEach(row => {
            const title = row.querySelector('.forum-title').innerText.toLowerCase();
            const desc = row.querySelector('.forum-desc').innerText.toLowerCase();
            
            if (title.includes(query) || desc.includes(query)) {
                row.style.display = 'grid'; // Matches your CSS display type
                anyVisible = true;
            } else {
                row.style.display = 'none';
            }
        });

        // Hide categories that have no visible rows
        categories.forEach(cat => {
            const visibleInCat = cat.querySelectorAll('.forum-row[style="display: grid;"]');
            cat.style.display = visibleInCat.length > 0 ? 'block' : 'none';
        });

        // Show/Hide "No Results" message
        noResults.style.display = anyVisible ? 'none' : 'block';
    });

    // Keep your original button functionality for "Hard Search" (database search)
    document.getElementById("inputSubBtn").addEventListener("click", () => {
        const q = searchInput.value;
        if(q) window.location.href = "/search-results?q=" + encodeURIComponent(q);
    });

    // Show button when user scrolls down 400px
    window.onscroll = function() {
        if (document.body.scrollTop > 400 || document.documentElement.scrollTop > 400) {
            document.getElementById("backToTop").style.display = "block";
        } else {
            document.getElementById("backToTop").style.display = "none";
        }
    };

    document.getElementById("backToTop").onclick = function() {
        window.scrollTo({top: 0, behavior: 'smooth'});
    };


</script>
</body>
</html>