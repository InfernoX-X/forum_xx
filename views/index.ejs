<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> <%= forumTitle %> | <%= siteTitle %></title>
    <link rel="icon" href="<%= favIcon %>">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <style>
        :root {
            --accent: #F93742;
            --accent-hover: #ff4d57;
            --bg: #0f0f0f; /* YouTube Darker Black */
            --surface: transparent;
            --surface-elevated: #1c1c1c;
            --border: #262626;
            --text-main: #f1f1f1;
            --text-muted: #aaaaaa;
            --radius: 12px;
        }

        * { margin: 0; padding: 0; box-sizing: border-box; }
        
        body { 
            background-color: var(--bg); 
            color: var(--text-main); 
            font-family: 'Inter', sans-serif; 
            line-height: 1.6;
            -webkit-font-smoothing: antialiased;
        }

        .container { width: 95%; max-width: 1800px; margin: 20px auto; }

        /* YouTube Grid Layout */
        #posts-feed {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
            gap: 40px 16px;
            padding: 20px;
        }

        /* Post Cards */
        .post-card { 
            width: 100%;
            background: var(--surface); 
            display: flex;
            flex-direction: column;
            transition: transform 0.2s ease;
        }

        @media (max-width: 320px) {
            .post-card{
                width: 260px;
            }
        }

        /* Thumbnail Section */
        .thumbnail-container {
            position: relative;
            width: 100%;
            aspect-ratio: 16 / 9;
            background: #262626;
            border-radius: var(--radius);
            overflow: hidden;
            margin-bottom: 12px;
            cursor: pointer;
        }

        .post-display-image { 
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: opacity 0.2s;
        }

        .thumbnail-container:hover .post-display-image { opacity: 0.9; }

        /* Metadata Section */
        .post-meta-wrapper {
            display: flex;
            gap: 12px;
            padding: 0 4px;
        }

        .author-avatar {
            width: 36px;
            height: 36px;
            background: #333;
            border-radius: 50%;
            flex-shrink: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 700;
            font-size: 0.8rem;
            color: #fff;
            background: linear-gradient(45deg, #222, #444);
        }

        .post-info { flex-grow: 1; }

        .post-display-title {
            font-size: 1rem;
            font-weight: 600;
            line-height: 1.4;
            margin-bottom: 6px;
            color: var(--text-main);
            display: -webkit-box;
            -webkit-line-clamp: 2;
            line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .post-display-title a { color: inherit; text-decoration: none; }
        .post-display-title a:hover { text-decoration: underline; }

        .sub-meta {
            font-size: 0.85rem;
            color: var(--text-muted);
            display: flex;
            flex-direction: column;
            gap: 2px;
        }

        .post-actions-row {
            margin-top: 10px;
            display: flex;
            gap: 8px;
        }

        .btn-mini {
            background: #272727;
            border: none;
            color: white;
            width: 70px;
            height: 30px;
            border-radius: 5px;
            font-size: 0.8rem;
            letter-spacing: 2px;
            font-family: Arial, Helvetica, sans-serif;
            font-weight: 600;
            cursor: pointer;
            transition: background 0.2s;
        }

        .btn-info{
            background: var(--accent);
        }
        .btn-edit{
            background: #4A90E2;
        }

        .btn-info:hover { background: var(--accent-hover); }
        .btn-edit:hover { background: #007BFF; }

        /* Forum Badges */
        .forum-badge { 
            display: inline-block;
            background: rgba(255, 255, 255, 0.1); 
            color: var(--text-muted); 
            font-size: 0.7rem; 
            padding: 2px 8px; 
            border-radius: 4px; 
            font-weight: 600;
            margin-top: 4px;
        }

        /* Modal Styles */
        .modal-overlay {
            display: none;
            position: fixed;
            top: 0; left: 0;
            width: 100%; height: 100%;
            background: rgba(0, 0, 0, 0.9);
            backdrop-filter: blur(8px);
            z-index: 2000;
            justify-content: center;
            align-items: center;
        }

        .modal-content {
            background: #121212;
            width: 95%;
            max-width: 800px;
            max-height: 90vh;
            border-radius: var(--radius);
            padding: 30px;
            overflow-y: auto;
            position: relative;
            border: 1px solid var(--border);
        }

        .close-modal {
            position: absolute;
            top: 15px;
            right: 20px;
            font-size: 2rem;
            cursor: pointer;
            color: var(--text-muted);
        }

        /* Scrollbar */
        ::-webkit-scrollbar { width: 8px; }
        ::-webkit-scrollbar-track { background: var(--bg); }
        ::-webkit-scrollbar-thumb { background: #333; border-radius: 10px; }

        /* Edit Form Elements */
        .edit-field {
            width: 100%;
            background: #161616;
            border: 1px solid #333;
            color: white;
            padding: 12px;
            border-radius: 6px;
            margin-bottom: 15px;
            font-family: inherit;
        }
        label { font-size: 0.75rem; color: var(--accent); font-weight: 700; text-transform: uppercase; margin-bottom: 5px; display: block; }

        /* Pagination Styles */
        .pagination {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 10px;
            margin: 40px 0 60px 0;
            padding: 20px;
        }

        .page-link {
            padding: 8px 16px;
            background: #272727;
            color: white;
            text-decoration: none;
            border-radius: 8px;
            font-weight: 600;
            font-size: 0.9rem;
            transition: background 0.2s;
            border: 1px solid transparent;
        }

        .page-link:hover {
            background: #3f3f3f;
        }

        .page-link.active {
            background: white;
            color: black;
        }

        .page-link.disabled {
            opacity: 0.5;
            cursor: not-allowed;
            pointer-events: none;
        }
    </style>
</head>

<body>
<%- include("partials/navBar") %>

<div class="container">
    <div id="posts-feed">
        <% for (const post of posts) { %>
            <div class="post-card" id="post-<%= post.id %>">
                
                <div class="thumbnail-container popUpClass">
                    <% if (post.image) { %>
                        <img src="<%= post.image %>" class="post-display-image" alt="Post Image">
                    <% } else { %>
                        <div style="height:100%; display:flex; align-items:center; justify-content:center; color:#444; font-size:0.8rem;">NO PREVIEW</div>
                    <% } %>
                </div>

                <div class="post-meta-wrapper">
                    

                    <div class="post-info">
                        <h2 class="post-display-title">
                            <% if(post.title.length > 80) { %>
                                <a href="<%= post.url %>" target="_blank"><%= post.title.slice(0,80) %>...</a>
                            <% } else { %>
                                <a href="<%= post.url %>" target="_blank"><%= post.title %></a>
                            <% } %>
                        </h2>

                        <div class="sub-meta">
                            <span><%= post.username %> â€¢ <%= timeAgo(post.created_at) %></span>
                            <div>
                                <% if (post.categories) { %>
                                    <% post.categories.split(',').slice(0, 3).forEach(cat => { %>
                                        <span class="forum-badge"><%= cat %></span>
                                    <% }) %>
                                <% } %>
                            </div>
                        </div>

                        <div class="post-actions-row">
                            <button class="btn-mini btn-info" onclick="openViewModal('<%= post.id %>')">Info</button>
                            <% if (user && user.id === post.user_id) { %>
                                <button class="btn-mini btn-edit hide-editBtn" onclick="openEditModal('<%= post.id %>')">Edit</button>
                            <% } %>
                        </div>
                    </div>
                </div>

                <div id="view-modal-<%= post.id %>" class="modal-overlay">
                    <div class="modal-content">
                        <span class="close-modal" onclick="closeModal('view-modal-<%= post.id %>')">&times;</span>
                        <h1 style="margin-bottom:20px;"><%= post.title %></h1>
                        <% if(post.image) { %> <img src="<%= post.image %>" style="width:100%; border-radius:8px; margin-bottom:20px;"> <% } %>
                        <div style="margin-bottom:20px;">
                            <% if (post.categories) { post.categories.split(',').forEach(cat => { %>
                                <span class="forum-badge" style="background:var(--accent); color:white; padding:4px 10px; margin-right:5px;"><%= cat %></span>
                            <% })} %>
                        </div>
                        <p style="white-space: pre-wrap; color: #ccc; line-height: 1.8; font-size:1.1rem;"><%= post.content %></p>
                        <% if(post.url) { %>
                            <a href="<%= post.url %>" target="_blank" style="color:var(--accent); display:block; margin-top:20px; word-break:break-all;"><%= post.url %></a>
                        <% } %>
                    </div>
                </div>

                <% if (user && user.id === post.user_id) { %>
                    <div id="edit-modal-<%= post.id %>" class="modal-overlay">
                        <div class="modal-content">
                            <span class="close-modal" onclick="closeModal('edit-modal-<%= post.id %>')">&times;</span>
                            <h2 style="color:var(--accent); margin-bottom:25px;">Edit Post Settings</h2>
                            
                            <form action="/forum/posts/edit/<%= post.id %>" method="POST" enctype="multipart/form-data">
                                
                                <label>Categories</label>
                                <input type="text" 
                                    placeholder="Filter tags..." 
                                    class="edit-field tag-filter-input" 
                                    style="font-size: 0.8rem; padding: 8px; margin-bottom: 5px;"
                                    oninput="filterEditTags(this, '<%= post.id %>')">

                                <div id="edit-list-<%= post.id %>" style="max-height:150px; overflow-y:auto; background:#111; padding:15px; border-radius:8px; border:1px solid #222; margin-bottom:20px;">
                                    <% let editHeader = ""; allForums.forEach(f => { if (f.header !== editHeader) { editHeader = f.header; %>
                                        <div class="edit-group-header" style="color:#555; font-size:0.65rem; font-weight:800; margin:10px 0 5px 0;"><%= editHeader %></div>
                                    <% } %>
                                        <label class="edit-tag-label" data-name="<%= f.title.toLowerCase() %>" style="display:inline-flex; align-items:center; gap:8px; width:45%; text-transform:none; color:#aaa; font-weight:400; cursor:pointer;">
                                            <input type="checkbox" name="forumIds" value="<%= f.id %>" <%= post.forum_ids && post.forum_ids.split(',').includes(f.id.toString()) ? 'checked' : '' %>>
                                            <%= f.title %>
                                        </label>
                                    <% }) %>
                                </div>

                                <label>Title</label>
                                <input type="text" name="title" value="<%= post.title %>" class="edit-field" required>
                                
                                <label>Content Summary</label>
                                <textarea name="content" rows="6" class="edit-field"><%= post.content %></textarea>

                                <label>URL Link</label>
                                <input type="text" name="url" value="<%= post.url %>" class="edit-field">

                                <label>New Image</label>
                                <input type="file" name="image" accept="image/*" style="margin-bottom:20px;">

                                <div style="display: flex; gap: 15px; justify-content: flex-end; border-top:1px solid #222; padding-top:20px;">
                                    <button type="button" class="btn-mini" style="background:transparent;" onclick="closeModal('edit-modal-<%= post.id %>')">Cancel</button>
                                    <button type="submit" class="btn-mini" style="background:var(--accent); padding:10px 25px; display: flex; align-items: center; justify-content: center;">Save</button>
                                </div>
                            </form>
                        </div>
                    </div>
                <% } %>

            </div>
        <% } %>
    </div>

    <% if (totalPages > 1) { %>
        <div class="pagination">
            <!-- <a href="?page=<%= currentPage - 1 %>" 
            class="page-link <%= currentPage === 1 ? 'disabled' : '' %>">
            &laquo; Previous
            </a> -->

            <% 
                let startPage = Math.max(1, currentPage - 2);
                let endPage = Math.min(totalPages, startPage + 4);
                if (endPage - startPage < 4) startPage = Math.max(1, endPage - 4);
            %>

            <% for(let i = startPage; i <= endPage; i++) { %>
                <a href="?page=<%= i %>" 
                class="page-link <%= currentPage === i ? 'active' : '' %>">
                <%= i %>
                </a>
            <% } %>

            <!-- <a href="?page=<%= currentPage + 1 %>" 
            class="page-link <%= currentPage === totalPages ? 'disabled' : '' %>">
            Next &raquo;
            </a> -->
        </div>
    <% } %>

</div>

<%- include("partials/imageViewer") %>

<script>
    function filterEditTags(inputElement, postId) {
        const searchTerm = inputElement.value.toLowerCase().trim();
        const modalContainer = document.getElementById(`edit-list-${postId}`);
        const labels = modalContainer.querySelectorAll('.edit-tag-label');
        const headers = modalContainer.querySelectorAll('.edit-group-header');

        // Filter individual labels
        labels.forEach(label => {
            const tagName = label.getAttribute('data-name') || "";
            if (tagName.includes(searchTerm)) {
                label.style.display = 'inline-flex';
            } else {
                label.style.display = 'none';
            }
        });

        // Handle Group Headers (hide if all tags under them are hidden)
        headers.forEach(header => {
            let nextEl = header.nextElementSibling;
            let hasVisibleChild = false;

            while (nextEl && !nextEl.classList.contains('edit-group-header')) {
                if (nextEl.classList.contains('edit-tag-label') && nextEl.style.display !== 'none') {
                    hasVisibleChild = true;
                    break;
                }
                nextEl = nextEl.nextElementSibling;
            }

            header.style.display = hasVisibleChild ? 'block' : 'none';
        });
    }

    function openEditModal(postId) {
        document.getElementById(`edit-modal-${postId}`).style.display = 'flex';
        document.body.style.overflow = 'hidden';
    }

    function openViewModal(postId) {
        document.getElementById(`view-modal-${postId}`).style.display = 'flex';
        document.body.style.overflow = 'hidden';
    }

    function closeModal(modalId) {
        document.getElementById(modalId).style.display = 'none';
        document.body.style.overflow = 'auto';
    }

    window.onclick = function(event) {
        if (event.target.classList.contains('modal-overlay')) {
            event.target.style.display = 'none';
            document.body.style.overflow = 'auto';
        }
    }

    if (typeof initializeImageGallery === "function") {
        initializeImageGallery("popUpClass");
    }
</script>

</body>
</html>