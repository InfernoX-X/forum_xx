        <div class="composer">
            <h3>Start a Discussion</h3>
            <form action="/forum/create" method="post" class="composer-grid">
                <input type="text" name="title" placeholder="Thread Title" required>
                <input type="text" name="bio" placeholder="Intro" required>
                <select name="category">
                    <% forums.forEach(category => { %>
                        <option value="<%= category.name %>"><%= category.name %></option>
                    <% }) %>
                </select>
                <button type="submit" class="btn-search">CREATE</button>
            </form>
        </div>

        <div class="quick-jump-container">
            <span class="jump-label">Jump to:</span>
            <div class="jump-links">
                <% forums.forEach(category => { %>
                    <a href="#cat-<%= category.name.replace(/[^\w\s]/gi, '').replace(/\s+/g, '-').toLowerCase() %>" class="jump-btn">
                        <i class="fas <%= category.icon %>"></i> <%= category.name.split('(')[0] %>
                    </a>
                <% }) %>
            </div>
        </div>

        <% forums.forEach(category => { %>
            <div class="category-section" id="cat-<%= category.name.replace(/[^\w\s]/gi, '').replace(/\s+/g, '-').toLowerCase() %>">
                <h2 class="category-label" style="--cat-color: <%= category.color || '#F93742' %>; border-bottom: 2px solid var(--cat-color); width:100%;">
                    <span id="span-<%= category.name.replace(/[^\w\s]/gi, '').replace(/\s+/g, '-').toLowerCase() %>" onclick="toggleView('<%= category.name %>')" style="font-size: 1.5rem; color: white; background-color: var(--cat-color); padding: 0 10px; border-radius: 5px; cursor: pointer;">-</span>
                    <i class="fas <%= category.icon %>" style="color: var(--cat-color); margin-right: 10px;"></i>
                    <%= category.name %>
                </h2>
                
                <% category.data.forEach(forum => { %>
                    <div class="forum-row list-<%= category.name.replace(/[^\w\s]/gi, '').replace(/\s+/g, '-').toLowerCase() %>">
                        <div class="forum-info">
                            <div style="display: flex; align-items: center;">
                                <a href="/forum/<%= forum.id %>" class="forum-title"><%= forum.title %></a>
                                
                                <% 
                                    const now = new Date();
                                    const lastPost = new Date(forum.lastPostDate);

                                    const isHot = forum.postCount > 15;
                                    const isTrending = forum.postCount > 100;
                                    const isNew = forum.lastPostDate && (new Date() - new Date(forum.lastPostDate) < 2 * 24 * 60 * 60 * 1000);
                                    const isRecent = forum.lastPostDate && (new Date() - new Date(forum.lastPostDate) < 5 * 24 * 60 * 60 * 1000);
                                    const isQuiet = !forum.lastPostDate || (now - lastPost > 7 * 24 * 60 * 60 * 1000);
                                %>

                                <% if (isNew) { %> <span class="badge badge-new">âœ¨ NEW</span> <% } %>
                                <% if (isHot) { %> <span class="badge badge-hot">ðŸ”¥ HOT</span> <% } %>
                                <% if (isRecent) { %> <span class="badge badge-recent">ðŸ•’ RECENT</span> <% } %>
                                <% if (isQuiet) { %> <span class="badge badge-quiet">ðŸ’¤ QUIET</span> <% } %>
                                <% if (isTrending) { %> <span class="badge badge-trending">ðŸ“ˆ TRENDING</span> <% } %>
                                
                            </div>
                            <span class="forum-desc"><%= forum.bio %></span>
                        </div>
                        
                        <div class="forum-stats">
                            <%= forum.postCount %>
                            <span>Posts</span>
                        </div>

                        <div class="forum-last-post">
                            <% if (forum.lastPostDate) { %>
                                <span class="lp-title"><%= forum.lastPostTitle %></span>
                                <div class="lp-meta">
                                    by <b><%= forum.lastPostUser %></b> â€¢ <%= timeAgo(forum.lastPostDate) %>
                                </div>
                            <% } else { %>
                                <span class="lp-meta">No activity yet</span>
                            <% } %>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% }) %>



        <div class="sidebar-leaderboard">
            <div class="sidebar-header">
                <i class="fas fa-trophy" style="color: gold; margin-right: 8px;"></i>
                TOP CONTRIBUTORS
            </div>
            <div class="leaderboard-content">
                <% if (topContributors.length > 0) { %>
                    <% topContributors.forEach((contributor, index) => { %>
                        <div class="contributor-item">
                            <span class="rank"><%= index + 1 %></span>
                            <span class="name"><%= contributor.username %></span>
                            <span class="count"><%= contributor.post_count %></span>
                        </div>
                    <% }) %>
                <% } else { %>
                    <div style="font-size: 0.7rem; color: var(--text-muted); padding: 10px;">No posts yet</div>
                <% } %>
            </div>
        </div>
    </div>


