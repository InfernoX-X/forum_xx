  font-weight: bold;
  text-transform: uppercase;
  font-size: 0.9rem;
}

/* Forum Rows */
.forum-row {
  display: grid;
  grid-template-columns: 50px 1fr 150px 200px;
  background-color: var(--row-bg);
  border-bottom: 1px solid var(--border-clr);
  align-items: center;
}

.forum-row:nth-child(even) { background-color: var(--row-alt); }

.forum-row:hover { background-color: #282828; }

.icon { text-align: center; color: var(--accent-clr); font-size: 1.2rem; }

.info { padding: 15px; }
.info a { 
  color: var(--accent-clr); 
  text-decoration: none; 
  font-size: 1.1rem; 
  font-weight: bold; 
}
.info p { margin: 5px 0 0; color: var(--text-muted); font-size: 0.7rem; }

.stats, .last-post {
  font-size: 0.8rem;
  color: var(--text-muted);
  border-left: 1px solid var(--border-clr);
  padding: 10px;
  text-align: center;
}

.last-post { text-align: left; }
.last-post span { color: var(--text-main); display: block; }
