.skeleton-avatar { width: 36px; height: 36px; border-radius: 50%; }
.skeleton-title { width: 80%; height: 18px; border-radius: 4px; margin-bottom: 8px; }
.skeleton-text { width: 50%; height: 14px; border-radius: 4px; }
</style>

<body>
<%- include("partials/navBar") %>

<div class="container">
    <div id="posts-feed">
    <% for (const post of posts) { %>
        <div class="post-card" id="post-<%= post.id %>">
            
            <div class="thumbnail-container">
                    <% 
                        const postDate = new Date(post.created_at);
                        const now = new Date();
                        const diffInHours = (now - postDate) / (1000 * 60 * 60);
                        if (diffInHours < 24) { 
                    %>
                        <div class="new-badge">New</div>
                    <% } %>

                    <% if (post.all_images) { 
                        const imgCount = post.all_images.split(',').length; 
                        if (imgCount > 1) { %>
                            <div class="image-count-badge">
                                <svg viewBox="0 0 24 24" width="12" height="12" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
