<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Request | <%= siteTitle %></title>
    <%- include("../partials/variables") %>
</head>
<body>
    <style>
        :root {
            /* Add this alongside your other variables */
            --accent-rgb: 249, 55, 66; 
        }
        body {
            background-color: var(--bg); /* Use your global background */
            color: var(--text-main);
            font-family: var(--font-family);
            line-height: 1.6;
        }
        /* Layout & Container */
        .container {
            max-width: 900px;
            margin: 40px auto;
            padding: 0 20px;
        }

        .page-header {
            margin-bottom: 30px;
            text-align: center;
        }

        .page-header h1 {
            font-size: 2rem;
            letter-spacing: 2px;
            color: var(--white);
            margin-bottom: 5px;
        }

        .page-header p {
            color: var(--cx-text-muted);
            font-size: 0.9rem;
        }

        /* Request Input Card */
        .card {
            background: var(--cx-surface);
            border: 1px solid var(--cx-border);
            border-radius: 12px;
            padding: 20px;
            transition: transform 0.2s ease;
        }

        label {
            display: block;
            font-size: 0.7rem;
            font-weight: 800;
            color: var(--accent);
            margin-bottom: 10px;
            letter-spacing: 1px;
        }

        textarea:focus {
            outline: none;
            border-color: var(--accent) !important;
            box-shadow: 0 0 10px rgba(var(--accent-rgb), 0.2);
        }

        /* Filter Tabs */
        .filter-tabs {
            display: flex;
            gap: 12px;
            margin-bottom: 30px;
            overflow: hidden;
            flex-wrap: wrap;
            padding-bottom: 10px;
        }

        .tab {
            white-space: nowrap;
            padding: 10px 20px;
            border-radius: 30px;
            font-size: 0.75rem;
            font-weight: 700;
            text-decoration: none;
            color: var(--cx-text-muted);
            background: rgba(255, 255, 255, 0.03);
            border: 1px solid var(--cx-border);
            transition: all 0.3s ease;
        }

        .tab:hover {
            color: var(--white);
            border-color: var(--accent);
        }

        .tab.active {
            background: var(--accent);
            color: #000; /* Contrast against accent */
            border-color: var(--accent);
        }

        /* Request Feed Items */
        .request-feed .card {
            margin-bottom: 20px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        }

        .request-main p {
            line-height: 1.5;
            font-style: italic;
        }

        .meta {
            font-family: 'Inter', sans-serif;
            letter-spacing: 0.3px;
        }

        /* Post Preview Section */
        .post-preview-box {
            transition: background 0.2s;
        }

        .post-preview-box:hover {
            background: rgba(255, 255, 255, 0.05) !important;
        }

        .post-preview-box img {
            box-shadow: 0 4px 8px rgba(0,0,0,0.5);
            transition: transform 0.2s;
        }

        .post-preview-box img:hover {
            transform: scale(1.05);
        }

        /* Buttons */
        .btn-accent {
            background: var(--accent);
            color: var(--white);
            border: none;
            padding: 8px 22px;
            border-radius: 6px;
            font-weight: 800;
            letter-spacing: 2px;
            font-size: 0.8rem;
            cursor: pointer;
            transition: opacity 0.2s;
        }

        .btn-accent:hover {
            opacity: 0.9;
        }

        /* Form Inputs within feed */
        input[type="number"] {
            outline: none;
            border-radius: 4px;
            transition: border-color 0.2s;
        }

        input[type="number"]:focus {
            border-color: var(--accent);
        }

        /* Animations */
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .request-feed .card {
            animation: fadeIn 0.4s ease forwards;
        }

        /* Clean status colors */
        .badge-finished { background-color: #28a745 !important; color: white; }
        .badge-pending { background-color: #ffaa00 !important; color: white; }
        .badge-open { background-color: var(--border) !important; color: white; }

        /* The base badge style */
        .status-badge {
            text-transform: uppercase;
            font-size: 0.7rem;
            font-weight: 800;
            padding: 4px 10px;
            border-radius: 4px;
            height: 30px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
        }
    </style>

<%- include("../partials/navBar") %>


<div class="container">
    <header class="page-header">
        <h1>REQUEST BOARD</h1>
        <p>Can't find something? Ask the community to help you find it.</p>
    </header>

    <div class="filter-tabs">
        <a href="/requests" class="tab <%= currentFilter === '' ? 'active' : '' %>">ALL</a>
        <a href="/requests?filter=mine" class="tab <%= currentFilter === 'mine' ? 'active' : '' %>">⭐ MY REQUESTS</a>
        <a href="/requests?filter=open" class="tab <%= currentFilter === 'open' ? 'active' : '' %>">OPEN</a>
        <a href="/requests?filter=pending" class="tab <%= currentFilter === 'pending' ? 'active' : '' %>">PENDING</a>
        <a href="/requests?filter=finished" class="tab <%= currentFilter === 'finished' ? 'active' : '' %>">FINISHED</a>
    </div>

    <div class="card" style="border-top-left-radius: 0; border-bottom-left-radius: 0; margin-bottom: 40px; border-left: 2px solid var(--accent);">
        <form action="/requests/create" method="post">
            <label>DESCRIBE YOUR REQUEST</label>
            <textarea name="message" rows="3" 
                placeholder="Example: 'Looking for the name of the girl in the red bikini from the latest [Studio] video', here is an img: http://example.com/image.jpg or 'More content like [Title] please! '" 
                required 
                style="width: 100%; background: var(--cx-input-bg); border: 1px solid var(--cx-border); color: white; padding: 15px; border-radius: 4px; margin-bottom: 10px;"></textarea>
            <button type="submit" class="btn-accent" style="width: auto; color: var(--white);">POST REQUEST</button>
        </form>
    </div>

    <div class="request-feed">
        <% if (requests.length === 0) { %>
            <div class="card" style="text-align: center; color: var(--cx-text-muted);">
                No <%= currentFilter || 'active' %> requests found.
            </div>
        <% } %>

        <% requests.forEach(req => { %>
        <div class="card" style="display: flex; flex-direction: column; gap: 15px;">
            
            <div class="request-main" style="display: flex; justify-content: space-between; gap: 20px;">
                <div style="flex: 1;">
                    <p style="font-size: 1.1rem; color: var(--white); margin: 0;">"<%= req.message %>"</p>
                    <div class="meta" style="font-size: 0.75rem; color: var(--cx-text-muted); margin-top: 5px;">
                        Requested by <%= req.username %> • <%= timeAgo(req.created_at) %>
                    </div>
                </div>

                <div class="status-badge badge-<%= req.status %>" >
                    <%= req.status %>
                </div>
            </div>

            <% if (req.fulfilled_post_id) { %>
                <div class="post-preview-box" style="display: flex; align-items: center; gap: 15px; background: rgba(0,0,0,0.2); padding: 12px; border-radius: 8px; border: 1px solid var(--cx-border); margin-top: 10px;">
                    
                    <div style="width: 100px; height: 70px; flex-shrink: 0;">
                        <img src="<%= req.post_preview || '/path/to/default-placeholder.jpg' %>" 
                            alt="Preview" 
                            style="width: 100%; height: 100%; object-fit: cover; border-radius: 4px;">
                    </div>
                    
                    <div style="flex-grow: 1;">
                        <div style="font-size: 0.65rem; color: var(--accent); font-weight: 800; text-transform: uppercase;">Found Content:</div>
                        <a href="/forum/post/<%= req.fulfilled_post_id %>" target="_blank" style="color: var(--white); text-decoration: none; font-weight: 600; display: block; margin: 2px 0;">
                            <%= req.post_title %>
                        </a>
                        <div style="font-size: 0.7rem; color: var(--cx-text-muted);">Uploaded by <%= req.contributor_name %></div>
                    </div>

                    <% if (req.status === 'pending' && user.id === req.user_id) { %>
                        <form action="/requests/finish/<%= req.id %>" method="post" style="margin: 0;">
                            <button type="submit" class="btn-accent" style="background: #28a745; border: none; padding: 10px 15px; border-radius: 4px; color: white; cursor: pointer; font-weight: bold; font-size: 0.75rem;">
                                APPROVE & CLOSE
                            </button>
                        </form>
                    <% } else if (req.status === 'pending') { %>
                        <span style="font-size: 0.7rem; color: #ffaa00; font-weight: bold; border: 1px solid #ffaa00; padding: 4px 8px; border-radius: 3px;">
                            WAITING FOR APPROVAL
                        </span>
                    <% } %>
                </div>
            <% } %>

            <% if (req.status === 'open' && user.id !== req.user_id) { %>
                <div style="border-top: 1px solid var(--cx-border); padding-top: 10px;">
                    <button onclick="toggleFulfillForm('<%= req.id %>')" class="btn-accent" style="background: transparent; border: 1px solid var(--accent); color: var(--accent); width: auto; font-size: 0.8rem;">I FOUND THIS CONTENT</button>
                    
                    <div id="fulfill-form-<%= req.id %>" style="display: none; margin-top: 10px;">
                        <form action="/requests/fulfill/<%= req.id %>" method="post" onsubmit="handleFulfillSubmit(event, '<%= req.id %>')" style="display: flex; gap: 10px;">
                            <input type="text" 
                                name="postId" 
                                placeholder="Paste URL or ID..." 
                                oninput="liveClean(this)"
                                required 
                                style="flex: 1; background: var(--cx-input-bg); border: 1px solid var(--cx-border); color: white; padding: 8px; transition: border-color 0.3s;">
                            <button type="submit" class="btn-accent" style="width: auto;">SUBMIT</button>
                        </form>
                    </div>
                </div>
            <% } %>

        </div>
    <% }) %>

    </div>

</div>

<script>
    function toggleFulfillForm(id) {
        const el = document.getElementById('fulfill-form-' + id);
        el.style.display = el.style.display === 'none' ? 'block' : 'none';
    }
    
    function handleFulfillSubmit(event, requestId) {
        event.preventDefault(); 
        const input = event.target.querySelector('input[name="postId"]');
        const rawValue = input.value.trim();
        
        const match = rawValue.match(/(?:\/|)(\d+)(?:\/|)$|(\d+)/);
        const finalId = match ? (match[1] || match[2]) : null;

        if (finalId) {
            input.value = finalId; 
            event.target.submit();
        } else {
            alert("Please enter a valid Post ID or URL.");
        }
    }

    function liveClean(inputEl) {
        const rawValue = inputEl.value.trim();

        if (/^\d+$/.test(rawValue)) return;

        const match = rawValue.match(/(?:post\/|p\/|posts\/)?(\d+)(?:\/|$|\?)/i);

        if (match && match[1]) {
            inputEl.value = match[1];
            
            inputEl.style.borderColor = 'var(--accent)';
            setTimeout(() => {
                inputEl.style.borderColor = 'var(--cx-border)';
            }, 500);
        }
    }
</script>

</body>
</html>