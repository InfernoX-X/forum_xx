<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= siteTitle %> | <%= searchKey %></title>
    <%- include("../partials/variables") %>

    <style>
        body { 
            background-color: var(--bg); 
            color: var(--text-main); 
            font-family: var(--font-family); 
            min-height: 100vh;  
            overflow-x: hidden; 
            overflow-y: auto;   
            line-height: 1.6;
            -webkit-font-smoothing: antialiased;
        }

        .container { 
            width: 95%; 
            max-width: 1800px;
            margin: 30px auto; 
            padding-top: 10px;
        }

        .main-layout {
            display: grid;
            grid-template-columns: 380px 1fr;
            gap: 30px;
            align-items: start;
        }

        .sidebar-filters {
            position: sticky;
            top: 20px;
            background: var(--surface-elevated);
            padding: 20px;
            border-radius: var(--radius);
            border: 1px solid var(--border);
            max-height: calc(100vh - 40px); 
            overflow-y: auto;
            display: flex;
            flex-direction: column;
        }

        /* Advanced Search */
        .search-bar-wrap { display: flex; gap: 10px; align-items: flex-start; }

        .edit-field {
            background: #000;
            padding: 12px 16px;
            border-radius: 8px;
            width: 100%;
            color: var(--white);
            transition: border-color 0.2s;
            outline: none;
            border: 1px solid var(--border);
        }
        
        .edit-field:focus{
            border-color: var(--accent);
        }

        .btn-search {
            background: var(--accent);
            color: var(--white);
            border: none;
            border-radius: 8px;
            font-weight: 400;
            letter-spacing: 1px;
            text-transform: uppercase;
            cursor: pointer;
            padding: 8px 12px;
            width: 100px;
            height: 40px;
        }

        .control-box {
            display: flex;
            flex-direction: column;
            gap: 12px;
        }

        .control-label {
            color: var(--accent);
            font-size: 0.7rem;
            font-weight: 800;
            text-transform: uppercase;
            letter-spacing: 1.2px;
            margin: 0;
        }

        .options-row {
            display: flex;
            gap: 20px;
            align-items: center;
        }

        .options-column {
            display: flex;
            flex-direction: column;
            gap: 12px;
        }

        .custom-checkbox, .custom-radio {
            display: flex;
            align-items: center;
            gap: 8px;
            cursor: pointer;
            position: relative;
        }

        .custom-checkbox input, .custom-radio input {
            display: none; /* Hide default */
        }

        .label-text{
            font-size: 0.8rem;
            text-transform: uppercase;
        }

        .checkmark, .radio-dot {
            width: 18px;
            height: 18px;
            border: 2px solid #444;
            background: #1a1a1a;
            transition: all 0.2s;
            position: relative; 
            display: inline-block;
        }

        .checkmark { border-radius: 4px; }
        .radio-dot { border-radius: 50%; }

        .checkmark::after {
            content: "";
            position: absolute;
            display: none;
            left: 5px;
            top: 1px;
            width: 4px;
            height: 8px;
            border: solid var(--white);
            border-width: 0 2px 2px 0;
            transform: rotate(45deg);
        }

        .radio-dot::after {
            content: '';
            position: absolute;
            top: 4px;
            left: 4px; 
            width: 6px;
            height: 6px;
            background: var(--white);
            border-radius: 50%;
            opacity: 0;
        }

        input:checked + .checkmark::after {
            display: block;
        }

        input:checked + .radio-dot::after {
            opacity: 1;
        }

        input:checked + .checkmark,
        input:checked + .radio-dot {
            background: var(--accent);
            border-color: var(--accent);
        }

        #selected-tags-tray {
            margin-bottom: 20px;
            padding: 10px;
            background: rgba(255, 255, 255, 0.03);
            border-radius: 8px;
        }

        .chip {
            background: var(--accent) !important; 
            color: white !important;
            border: none !important;
            font-weight: 600;
            transition: transform 0.1s;
        }

        .chip:hover {
            transform: scale(1.05);
            background: var(--accent-hover) !important;
        }

        .tag-list-scrollable {
            display: flex;
            flex-direction: column;
            max-height: 200px;
            margin-top: 10px;
            padding-right: 5px;
            gap: 8px;
            overflow-y: auto;
        }

        .selected-tags-container {
            display: flex;
            flex-wrap: wrap;
            gap: 6px;
            margin: 10px 0;
        }

        .checkbox-label {
            display: flex;
            align-items: center;
            gap: 8px;
            font-size: 0.85rem;
            color: var(--text-muted);
            cursor: pointer;
            transition: color 0.2s;
        }

        .checkbox-label:hover {
            color: var(--white);
        }

        .checkbox-label input {
            width: 16px;
            height: 16px;
            accent-color: var(--accent);
        }

        .tag-search-field {
            width: 100%;
            background: #000;
            border: 1px solid var(--border);
            color: var(--white);
            padding: 8px 12px;
            border-radius: 6px;
            font-size: 0.85rem;
            outline: none;
            letter-spacing: 1px;
        }

        .tag-search-field:focus {
            border-color: var(--accent);
        }

        
        /* Posts */
        .content-results{
            height: 85vh;
            overflow-y: scroll;
        }

        #posts-feed {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
            gap: 40px 16px;
            padding: 20px;
        }

    </style>

    <style>
        /* Responsive */
        @media (max-width: 768px) {
            .main-layout {
                grid-template-columns: 1fr;
                gap: 15px;
                padding: 0 10px;
            }
            .sidebar-filters {
                position: relative;
                top: 0;
            }
            body{
                /* overflow: scroll; */
                overflow-y: auto
            }
            .content-results{
                overflow: visible;
            }

            .container {
                width: 95%; 
                margin: 10px auto;
            }
            
            #posts-feed {
                grid-template-columns: 1fr;
                gap: 20px;
                padding: 10px 0;
            }

            .sidebar-filters {
                max-height: none; 
            }
        }
    </style>
</head>

<body>
<%- include("../partials/navBar") %>

<%- include("../partials/imageViewer") %>

<div class="container">
    <div class="main-layout">
        <aside class="sidebar-filters">
            <h1 style="font-size: 1.2rem; margin-bottom: 20px; letter-spacing: 1px; color: #e0e0e0;">ADVANCED SEARCH</h1>
            
            <form action="/search" method="GET" id="searchForm">
                <div class="search-bar-wrap" style="margin-bottom: 20px;">
                    <input type="text" name="q" value="<%= searchKey %>" placeholder="Search keywords..." class="edit-field" style="margin-bottom: 0;" autocomplete="off">
                    <button type="submit" class="btn-search" >Search</button>
                </div>
    
                <div class="control-box" style="margin-bottom: 20px;">
                    <label class="control-label">Search In</label>
                    <div class="options-row" style="margin-top: 10px;">
                        <label class="custom-checkbox">
                            <input type="checkbox" name="scope" value="title" <%= !scope || scope.includes('title') ? 'checked' : '' %>>
                            <span class="checkmark"></span>
                            <span class="label-text">Title</span>
                        </label>
                        <label class="custom-checkbox">
                            <input type="checkbox" name="scope" value="content" <%= !scope || scope.includes('content') ? 'checked' : '' %>>
                            <span class="checkmark"></span>
                            <span class="label-text">Content</span>
                        </label>
                    </div>
                </div>
    
                <div class="control-box" style="margin-bottom: 20px; padding-top: 15px; border-top: 1px solid var(--border);">
                    <label class="control-label">Match Strategy</label>
                    <div class="options-column" style="margin-top: 10px; display: flex; flex-direction: column; gap: 10px;">
                        <label class="custom-radio">
                            <input type="radio" name="mode" value="any" <%= searchMode !== 'all' ? 'checked' : '' %>>
                            <span class="radio-dot"></span>
                            <span class="label-text">Any Category (OR)</span>
                        </label>
                        <label class="custom-radio">
                            <input type="radio" name="mode" value="all" <%= searchMode === 'all' ? 'checked' : '' %>>
                            <span class="radio-dot"></span>
                            <span class="label-text">All Categories (AND)</span>
                        </label>
                    </div>
                </div>
    
                <div class="control-box" style="padding-top: 15px; border-top: 1px solid var(--border);">
                    <div id="selected-tags-tray" style="display: flex; flex-wrap: wrap; gap: 6px; margin-bottom: 10px; min-height: 20px; overflow-y: scroll; max-height: 150px; ">
                    </div>

                    <label class="control-label">Filter Categories</label>
                    <input type="text" id="tagSearchInput" placeholder="Type to filter list..." class="tag-search-field" style="margin: 10px 0;" autocomplete="off">
                    
    
                    <div class="tag-list-scrollable">
                        <% allForums.forEach(forum => { %>
                            <label class="checkbox-label" data-name="<%= forum.title.toLowerCase() %>" style="margin-bottom: 8px; display: flex;">
                                <input type="checkbox" name="forums" value="<%= forum.id %>" 
                                    <%= selectedForums.includes(forum.id.toString()) ? 'checked' : '' %>>
                                <span style="font-size: 0.85rem; text-transform: uppercase; font-weight: 600; letter-spacing: 1px;"><%= forum.title %></span>
                            </label>
                        <% }) %>
                    </div>
                </div>
            </form>
        </aside>
    
        <main class="content-results">
            <div class="search-header" style="padding: 0 20px;">
                <h1 style="color: #e0e0e0; font-size: 1.5rem;">SEARCH RESULTS: <span><%= searchKey %></span></h1>
            </div>
            <div id="posts-feed">
                <% if (posts.length == 0) { %>
                    <div style="grid-column: 1/-1; text-align: center; padding: 100px 0; color: var(--text-muted);">
                        <svg style="margin-bottom: 20px; opacity: 0.2;" width="64" height="64" ...> </svg>
                        <h2 style="font-weight: 500;">No results found for "<%= searchKey %>"</h2>
                        <p>Try adjusting your filters or checking your spelling.</p>
                    </div>
                <% } %>

                <%- include("../partials/posts") %> 

            </div>

            <%- include("../partials/pagination") %> 
            
            <%- include("../partials/notification") %> 
        </main>
    </div>
</div>


<script>
    function updateSelectedTray() {
        const tray = document.getElementById('selected-tags-tray');
        const selectedCheckboxes = document.querySelectorAll('.tag-list-scrollable input[name="forums"]:checked');
        
        // Reset tray with small header
        tray.innerHTML = '<span style="color: #666; font-size: 0.8rem; width: 100%;">Active Filters (Pending):</span>';

        if (selectedCheckboxes.length === 0) {
            tray.innerHTML += '<span style="color: #888; font-size: 0.8rem;">All Categories</span>';
            return;
        }

        selectedCheckboxes.forEach(cb => {
            const labelText = cb.closest('label').querySelector('span').innerText;
            const chip = document.createElement('div');

            chip.style.cssText = "background: #333; color: #eee; padding: 4px 10px; border-radius: 4px; font-size: 0.75rem; cursor: pointer; display: flex; align-items: center; gap: 5px; border: 1px solid var(--border);";
            chip.innerHTML = `${labelText} <span style="color: var(--white); font-weight:bold">&times;</span>`;
            chip.classList.add("chip");

            chip.onclick = () => {
                cb.checked = false;
                updateSelectedTray(); 
            };
            tray.appendChild(chip);
        });
    }

    document.addEventListener('DOMContentLoaded', () => {
        const tagSearchInput = document.getElementById('tagSearchInput');
        if (tagSearchInput) {
            tagSearchInput.addEventListener('input', (e) => {
                const term = e.target.value.toLowerCase().trim();
                document.querySelectorAll('.tag-list-scrollable .checkbox-label').forEach(l => {
                    const name = l.getAttribute('data-name') || "";
                    l.style.display = name.includes(term) ? 'flex' : 'none';
                });
            });
        }

        updateSelectedTray();

        document.querySelectorAll('.tag-list-scrollable input[name="forums"]').forEach(input => {
            input.addEventListener('change', updateSelectedTray);
        });
    });
</script>


</body>
</html>