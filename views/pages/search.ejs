<script>
    function previewNewImages(input, postId) {
        const previewContainer = document.getElementById(`preview-container-${postId}`);
        const label = document.getElementById(`label-text-${postId}`);
        
        // Clear previous previews
        previewContainer.innerHTML = '';

        if (input.files && input.files.length > 0) {
            label.innerText = `${input.files.length} image(s) selected`;
            label.style.color = "var(--accent)";

            Array.from(input.files).forEach(file => {
                const reader = new FileReader();
                
                reader.onload = function(e) {
                    // Create a small wrapper for the preview
                    const imgWrapper = document.createElement('div');
                    imgWrapper.style.cssText = "position:relative; width:100%; aspect-ratio:1; border:1px solid #444; border-radius:4px; overflow:hidden;";
                    
                    const img = document.createElement('img');
                    img.src = e.target.result;
                    img.style.cssText = "width:100%; height:100%; object-fit:cover;";
                    
                    imgWrapper.appendChild(img);
                    previewContainer.appendChild(imgWrapper);
                }
                
                reader.readAsDataURL(file);
            });
        } else {
            label.innerText = "Click to select images";
            label.style.color = "#aaa";
        }
    }

    function updateAddCount(input, postId) {
        const label = document.getElementById(`label-text-${postId}`);
        if (input.files.length > 0) {
            label.innerText = `${input.files.length} image(s) selected`;
            label.style.color = "var(--accent)";
        }
    }

    function showSelectedCount(input, postId) {
        const count = input.files.length;
        const label = document.getElementById(`file-count-${postId}`);
        if (count > 0) {
            label.innerText = `${count} file(s) selected - Ready to upload`;
            label.style.color = "#4A90E2";
        }
    }
    
    function filterEditTags(inputElement, postId) {
        const searchTerm = inputElement.value.toLowerCase().trim();
        const modalContainer = document.getElementById(`edit-list-${postId}`);
        const labels = modalContainer.querySelectorAll('.edit-tag-label');
        const headers = modalContainer.querySelectorAll('.edit-group-header');

        // Filter individual labels
        labels.forEach(label => {
            const tagName = label.getAttribute('data-name') || "";
            if (tagName.includes(searchTerm)) {
                label.style.display = 'inline-flex';
            } else {
                label.style.display = 'none';
            }
        });

        // Handle Group Headers (hide if all tags under them are hidden)
        headers.forEach(header => {
            let nextEl = header.nextElementSibling;
            let hasVisibleChild = false;

            while (nextEl && !nextEl.classList.contains('edit-group-header')) {
                if (nextEl.classList.contains('edit-tag-label') && nextEl.style.display !== 'none') {
                    hasVisibleChild = true;
                    break;
                }
                nextEl = nextEl.nextElementSibling;
            }

            header.style.display = hasVisibleChild ? 'block' : 'none';
        });
    }

    function openEditModal(postId) {
        document.getElementById(`edit-modal-${postId}`).style.display = 'flex';
        document.body.style.overflow = 'hidden';
    }

    function openViewModal(postId) {
        document.getElementById(`view-modal-${postId}`).style.display = 'flex';
        document.body.style.overflow = 'hidden';
    }

    function closeModal(modalId) {
        document.getElementById(modalId).style.display = 'none';
        document.body.style.overflow = 'auto';
    }

    function sharePost(postId) {
        const fullUrl = window.location.origin + '/forum/post/' + postId;
        
        navigator.clipboard.writeText(fullUrl).then(() => {
            const toast = document.getElementById("share-toast");
            toast.innerText = "Link copied to clipboard!";
            toast.className = "show";
            
            setTimeout(() => { 
                toast.className = toast.className.replace("show", ""); 
            }, 3000);
        }).catch(err => {
            console.error('Could not copy text: ', err);
        });
    }

    window.onclick = function(event) {
        if (event.target.classList.contains('modal-overlay')) {
            event.target.style.display = 'none';
            document.body.style.overflow = 'auto';
        }
    }

    if (typeof initializeImageGallery === "function") {
        initializeImageGallery("popUpClass");
    }

    document.getElementById('tagSearchInput').addEventListener('input', function(e) {
        const searchTerm = e.target.value.toLowerCase().trim();
        const groups = document.querySelectorAll('.header-group');

        groups.forEach(group => {
            const labels = group.querySelectorAll('.checkbox-label');
            let hasVisibleTags = false;

            labels.forEach(label => {
                // This now matches the attribute we added in the HTML
                const tagName = label.getAttribute('data-name') || "";
                
                if (tagName.includes(searchTerm)) {
                    label.classList.remove('hidden-tag');
                    hasVisibleTags = true;
                } else {
                    label.classList.add('hidden-tag');
                }
            });

            // Hide or show the whole section (Header + Grid)
            if (hasVisibleTags) {
                group.style.display = 'block';
            } else {
                group.style.display = 'none';
            }
        });
    });

    function toggleReadMore(postId) {
        const container = document.getElementById(`content-container-${postId}`);
        const btn = document.getElementById(`toggle-btn-${postId}`);
        
        if (container.classList.contains('expanded')) {
            container.classList.remove('expanded');
            btn.innerText = "Read More";
            // Scroll back to top of modal when collapsing
            btn.closest('.modal-content').scrollTop = 0;
        } else {
            container.classList.add('expanded');
            btn.innerText = "Read Less";
        }
    }

</script>

<script>
    function updateSelectedTray() {
    const tray = document.getElementById('selected-tags-tray');
    // Find all checked checkboxes in the forums list
    const selectedCheckboxes = document.querySelectorAll('input[name="forums"]:checked');
    
    // Clear the tray except for the label
    tray.innerHTML = '<span style="color: #666; font-size: 0.8rem; width: 100%;">Active Filters:</span>';

    if (selectedCheckboxes.length === 0) {
        tray.innerHTML += '<span style="color: #444; font-size: 0.8rem;">None selected</span>';
        return;
    }

    selectedCheckboxes.forEach(cb => {
        const labelText = cb.nextElementSibling.innerText;
        
        // Create a "Chip" for the tray
        const chip = document.createElement('div');
        chip.className = 'selected-chip';
        chip.style.cssText = "background: var(--accent); color: white; padding: 4px 10px; border-radius: 20px; font-size: 0.75rem; cursor: pointer; display: flex; align-items: center; gap: 5px;";
        chip.innerHTML = `${labelText} <span style="font-weight:bold">&times;</span>`;
        
        // Clicking the chip unchecks the original checkbox
        chip.onclick = () => {
            cb.checked = false;
            updateSelectedTray(); // Refresh tray
        };
        
        tray.appendChild(chip);
    });
}

// Initialize on page load to catch EJS pre-selected items
document.addEventListener('DOMContentLoaded', () => {
    updateSelectedTray();
    
    // Attach listener to all forum checkboxes
    document.querySelectorAll('input[name="forums"]').forEach(input => {
        input.addEventListener('change', updateSelectedTray);
    });
});
</script>

