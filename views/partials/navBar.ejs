
<style>
    :root {
        --nav-bg: rgb(22, 22, 22);
        --accent: #F93742;
        --dropdown-bg: #1e1e1e;
    }

    .main-navbar {
        height: 70px;
        width: 100%;
        background-color: var(--nav-bg);
        border-bottom: 1px solid #222;
        position: sticky;
        top: 0;
        left: 0;
        right: 0;
        z-index: 1000;
        display: flex;
        align-items: center;
    }

    .nav-container {
        width: 100%;
        padding: 0 40px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .logo {
        text-decoration: none;
        color: #fff;
        font-family: 'Inter', sans-serif;
        font-size: 1.5rem;
    }

    .logo span {
        color: var(--accent);
    }

    /* Image Toggle Button Styling */
    .image-toggle-btn {
        background: #222;
        color: #fff;
        border: 1px solid #333;
        padding: 8px 15px;
        border-radius: 6px;
        font-size: 0.85rem;
        font-weight: 600;
        cursor: pointer;
        transition: 0.2s;
        border-color: var(--accent);
    }

    .image-toggle-btn:hover {
        background: #282828;
        border-color: var(--accent)
    }
    
    /* Logic for hiding images in the feed */
    body.hide-images .popUpClass {
        display: none !important;
    }
    
    body.hide-images .image-toggle-btn {
        color: #888;
    }

    /* Dropdown Container */
    .dropdown {
        position: relative;
        display: inline-block;
    }

    /* The Main Button */
    .dropbtn {
        background: #222;
        color: #fff;
        border: 1px solid var(--accent);
        padding: 8px 15px;
        border-radius: 6px;
        font-size: 0.85rem;
        font-weight: 600;
        cursor: pointer;
        transition: 0.2s;
    }

    /* Dropdown Content (Hidden by Default) */
    .dropdown-content {
        display: none;
        position: absolute;
        right: 0;
        background-color: var(--dropdown-bg);
        min-width: 200px;
        box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.5);
        z-index: 1;
        border-radius: 6px;
        border: 1px solid #333;
        margin-top: 5px;
        overflow: hidden;
    }
    
    /* Links/Buttons inside the dropdown */
    .dropdown-content button {
        color: #ccc;
        padding: 12px 16px;
        text-decoration: none;
        display: block;
        width: 100%;
        border: none;
        background: none;
        text-align: left;
        font-size: 0.85rem;
        cursor: pointer;
        transition: 0.2s;
        font-family: Arial, Helvetica, sans-serif;
        font-weight: bold;
        letter-spacing: 1px;
    }

    .dropdown-content button:hover {
        background-color: #282828;
        color: var(--accent);
    }

    /* Show the dropdown menu on hover */
    .dropdown:hover .dropdown-content {
        display: block;
    }

    .dropdown:hover .dropbtn {
        opacity: 0.8;
    }

    body.hide-leaderboard .sidebar-leaderboard {
        display: none !important;
    }

    /* Optional: change the look of the toggle when off */
    body.hide-leaderboard #leaderboardToggle {
        color: #888;
    }
    
</style>

<nav class="main-navbar">
    <div class="nav-container">
        <a href="/" class="logo"><h3>Forum<span>X</span></h3></a>

        <div class="nav-controls">
            <div class="dropdown">
                <button class="dropbtn">‚öôÔ∏è Settings</button>
                <div class="dropdown-content">
                    <button>üë§ <%= user.username %></button>
                    <button id="imageToggle">üñºÔ∏è Images: ON</button>
                    <button id="leaderboardToggle">üèÜ Leaderboard: ON</button>
                    <hr style="border-top: 1px solid #333; margin: 10px 0;">
                    <button id="logoutBtn" onclick="confirm('Do you want to logout?') ? window.location.href='/logout' : '' ">‚èª Logout</button>
                </div>
            </div>
        </div>
    </div>
</nav>

<script>
document.addEventListener('DOMContentLoaded', () => {
    const body = document.body;
    const imageBtn = document.getElementById('imageToggle');
    const leaderboardBtn = document.getElementById('leaderboardToggle');

    // Image Toggle
    const setImageState = (isHidden) => {
        if (isHidden) {
            body.classList.add('hide-images');
            imageBtn.innerHTML = 'üñºÔ∏è Images: OFF';
        } else {
            body.classList.remove('hide-images');
            imageBtn.innerHTML = 'üñºÔ∏è Images: ON';
        }
    };

    const isHidden = localStorage.getItem('hideForumImages') === 'true';
    setImageState(isHidden);

    imageBtn.addEventListener('click', () => {
        const currentlyHidden = body.classList.contains('hide-images');
        const newState = !currentlyHidden;
        localStorage.setItem('hideForumImages', newState);
        setImageState(newState);
    });


    // Leaderboard Toggle
    const setLeaderboardState = (isHidden) => {
        if (isHidden) {
            body.classList.add('hide-leaderboard');
            leaderboardBtn.innerHTML = 'üèÜ Leaderboard: OFF';
        } else {
            body.classList.remove('hide-leaderboard');
            leaderboardBtn.innerHTML = 'üèÜ Leaderboard: ON';
        }
    };

    const isLeaderboardHidden = localStorage.getItem('hideLeaderboard') === 'true';
    setLeaderboardState(isLeaderboardHidden);

    leaderboardBtn.addEventListener('click', () => {
        const currentlyHidden = body.classList.contains('hide-leaderboard');
        const newState = !currentlyHidden;
        localStorage.setItem('hideLeaderboard', newState);
        setLeaderboardState(newState);
    });
});
</script>