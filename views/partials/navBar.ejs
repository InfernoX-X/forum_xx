
<style>
    :root {
        --nav-bg: rgb(22, 22, 22);
        --accent: #F93742;
    }

    .main-navbar {
        height: 70px;
        width: 100%;
        background-color: var(--nav-bg);
        border-bottom: 1px solid #222;
        position: sticky;
        top: 0;
        left: 0;
        right: 0;
        z-index: 1000;
        display: flex;
        align-items: center;
    }

    .nav-container {
        width: 100%;
        padding: 0 40px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .logo {
        text-decoration: none;
        color: #fff;
        font-family: 'Inter', sans-serif;
        font-size: 1.5rem;
    }

    .logo span {
        color: var(--accent);
    }

    /* Image Toggle Button Styling */
    .image-toggle-btn {
        background: #222;
        color: #fff;
        border: 1px solid #333;
        padding: 8px 15px;
        border-radius: 6px;
        font-size: 0.85rem;
        font-weight: 600;
        cursor: pointer;
        transition: 0.2s;
        border-color: rgb(43, 236, 43);
    }

    .image-toggle-btn:hover {
        background: #282828;
        border-color: var(--accent);
    }
    
    /* Logic for hiding images in the feed */
    body.hide-images .popUpClass {
        display: none !important;
    }
    
    body.hide-images .image-toggle-btn {
        border-color: var(--accent);
        color: #888;
    }
</style>

<nav class="main-navbar">
    <div class="nav-container">
        <a href="/" class="logo">
            <h3>Forum<span>X</span></h3>
        </a>

        <div class="nav-controls">
            <button class="image-toggle-btn btn-link">
                üñºÔ∏è Images: ON
            </button>
        </div>
    </div>
</nav>

<script>
document.addEventListener('DOMContentLoaded', () => {
    const toggleBtn = document.querySelector('.image-toggle-btn');
    const body = document.body;

    // Function to apply visibility
    const setImageState = (isHidden) => {
        if (isHidden) {
            body.classList.add('hide-images');
            toggleBtn.innerHTML = 'üñºÔ∏è Images: OFF';
        } else {
            body.classList.remove('hide-images');
            toggleBtn.innerHTML = 'üñºÔ∏è Images: ON';
        }
    };

    // Load initial state from browser memory
    const isHidden = localStorage.getItem('hideForumImages') === 'true';
    setImageState(isHidden);

    // Toggle click event
    toggleBtn.addEventListener('click', () => {
        const currentlyHidden = body.classList.contains('hide-images');
        const newState = !currentlyHidden;
        
        localStorage.setItem('hideForumImages', newState);
        setImageState(newState);
    });
});
</script>