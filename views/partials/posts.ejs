                    </svg>
                </button>

                <div class="popUpClass" style="width:100%; height:100%;">
                    <% if (post.thumbnail) { %>
                        <img src="<%= post.thumbnail %>" class="post-display-image" loading="lazy" alt="Post Image">
                    <% } else { %>
                        <div style="height:100%; display:flex; align-items:center; justify-content:center; color:#444; font-size:0.8rem;">NO PREVIEW</div>
                    <% } %>
                </div>
            </div>

        <div class="post-meta-wrapper">
            <div class="post-info">
                <h2 class="post-display-title">
                    <a href="/forum/post/<%= post.id %>"><%= post.title %></a>
                </h2>

                <div class="sub-meta">
                    <span><a style="color: var(--text-muted); text-decoration: none;" href="/user/<%= post.userId %>"><%= post.username %></a> â€¢ <%= timeAgo(post.created_at) %></span>
                    <div>
                        <% if (post.categories) { %>
                            <% post.categories.split(',').slice(0, 3).forEach(cat => { %>
                                <span class="forum-badge"  style="text-transform: capitalize;"><%= cat %></span>
                            <% }) %>
                        <% } %>
                    </div>
                </div>

                <div class="post-actions-row">
                    <button class="btn-mini btn-info" onclick="openViewModal('<%= post.id %>')">Info</button>

                    <% if (user && (user.id === post.user_id || user.isAdmin == 1)) { %>
                        <button class="btn-mini btn-edit hide-editBtn" onclick="openEditModal('<%= post.id %>')">Edit</button>
                    <% } %>
                </div>
            </div>
        </div>

        <div id="view-modal-<%= post.id %>" class="modal-overlay">
            <div class="modal-content">
                <span class="close-modal" onclick="closeModal('view-modal-<%= post.id %>')">&times;</span>
                <h1 style="margin-bottom:20px;"><%= post.title %></h1>
                
                <div class="modal-image-gallery" style="display: flex; flex-direction: column; gap: 15px; margin-bottom: 20px;">
                    <% if(post.all_images) { 
                        const images = post.all_images.split(','); 
                        images.forEach(img => { %>
                            <img src="<%= img %>" style="width:100%; border-radius:8px; border: 1px solid #333;" loading="lazy">
                    <%  }); 
                    } %>
                </div>

                <div style="margin-bottom:20px;">
                    <% if (post.categories) { post.categories.split(',').forEach(cat => { %>
                        <span class="forum-badge" style="background:var(--accent); color:var(--white); padding:4px 10px; margin-right:5px; text-transform: capitalize;"><%= cat %></span>
                    <% })} %>
                </div>

                <div id="content-container-<%= post.id %>" class="content-wrapper">
                    <p style="color: #ccc; line-height: 1.8; font-size:1.1rem;">
                        <%= post.content %>
                    </p>
                    <div class="content-fade"></div>
                </div>

                <button id="toggle-btn-<%= post.id %>" class="read-more-btn" onclick="toggleReadMore('<%= post.id %>')">
                    Read More
                </button>

                <% if(post.url) { %>
                    <a href="<%= post.url %>" target="_blank" style="color:var(--accent); display:block; margin-top:20px; word-break:break-all;"><%= post.url %></a>
                <% } %>
            </div>
        </div>

        <% if (user && user.id === post.user_id || user.isAdmin == 1) { %>
            <div id="edit-modal-<%= post.id %>" class="modal-overlay">
                <div class="modal-content">
                    <span class="close-modal" onclick="closeModal('edit-modal-<%= post.id %>')">&times;</span>
                    <h2 style="color:var(--accent); margin-bottom:20px;">Edit Post Settings</h2>
                    
                    <form action="/forum/posts/edit/<%= post.id %>" method="POST">
                        <label>1. Add/Remove Categories</label>
                        <div class="category-manager" style="position:relative;">
                            
                            <div id="tag-container-<%= post.id %>" style="display:flex; flex-wrap:wrap; gap:5px; margin-bottom:10px;">
                                <% allForums.forEach(f => { %>
                                    <% if (post.forum_ids && post.forum_ids.split(',').includes(f.id.toString())) { %>
                                        <span class="tag-pill" data-id="<%= f.id %>">
                                            <%= f.title %>
                                            <input type="hidden" name="forumIds" value="<%= f.id %>">
                                            <span class="remove-btn" onclick="removeTag(this)">Ã—</span>
                                        </span>
                                    <% } %>
                                <% }) %>
                            </div>

                            <input type="text" 
                                placeholder="Search and add categories..." 
                                class="edit-field" 
                                onfocus="toggleDropdown('<%= post.id %>', true)"
                                oninput="filterEditTags(this, '<%= post.id %>')">

                            <div id="edit-list-<%= post.id %>" class="custom-dropdown">
                                <% allForums.forEach(f => { %>
                                    <div class="dropdown-item" 
                                        data-id="<%= f.id %>" 
                                        data-name="<%= f.title.toLowerCase() %>"
                                        onclick="addTag('<%= f.id %>', '<%= f.title %>', '<%= post.id %>')">
                                        <%= f.title %>
                                    </div>
                                <% }) %>
                            </div>
                        </div>

                        <label>2. Name</label>
                        <input type="text" name="title" value="<%= post.title %>" class="edit-field" required>
                        
                        <label>3. Description</label>
                        <textarea name="content" rows="3" class="edit-field"><%= post.content %></textarea>

                        <label>4. Full Video Link</label>
                        <input type="text" name="url" value="<%= post.url %>" class="edit-field">

                        <button type="submit" class="btn-mini" style="background:var(--accent); width:100%; height:40px; border-radius:6px; margin-bottom:20px;">Save Above Changes</button>
                    </form>

                    <hr style="border:0; border-top:1px solid #262626; margin:10px 0 20px 0;">

                    <label style="margin-bottom:10px; display:block;">ðŸ”ƒ Replace Images Individually (Warning: Each Replace will Reload the page!)</label>
                    <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(110px, 1fr)); gap: 12px;">
                        <% if(post.all_images && post.image_ids) { 
                            const imgs = post.all_images.split(',');
                            const ids = post.image_ids.split(',');
                            imgs.forEach((img, index) => { %>
                            
                            <div style="background:#1a1a1a; padding:8px; border-radius:8px; border:1px solid #333; text-align:center;">
                                <img src="<%= img %>" style="width:100%; aspect-ratio:1; object-fit:cover; border-radius:4px; margin-bottom:8px;">
                                
                                <form action="/forum/posts/edit-image/<%= ids[index] %>" method="POST" enctype="multipart/form-data">
                                    <label class="btn-mini" style="background:#272727; width:100%; cursor:pointer; font-size:9px; padding:6px 0; display:block; border-radius:4px;">
                                        CHOOSE NEW
                                        <input type="file" name="image" accept="image/*" onchange="this.form.submit()" style="display:none;">
                                    </label>
                                </form>
                            </div>

                        <% }); } %>
                    </div>
                    <% 
                        const currentImgCount = post.image_ids ? post.image_ids.split(',').length : 0; 
                    %>

                    <div style="margin-top: 25px; padding-top: 20px; border-top: 1px dashed #333;">
                        <% if (currentImgCount < 5) { %>
                            <label style="color: var(--accent); margin-bottom: 10px;">
                                âž• Add More Images (<%= 5 - currentImgCount %> slots left, more images won't upload even if shows here!)
                            </label>
                            
                            <div id="preview-container-<%= post.id %>" style="display: grid; grid-template-columns: repeat(auto-fill, minmax(80px, 1fr)); gap: 10px; margin-bottom: 15px;"></div>
                            <form action="/forum/posts/add-images/<%= post.id %>" method="POST" enctype="multipart/form-data">
                                <div style="background: #111; border: 2px dashed #333; border-radius: 8px; padding: 15px; text-align: center;">
                                    <input type="file" name="images" id="add-more-<%= post.id %>" accept="image/*" multiple 
                                        style="display:none;" onchange="previewNewImages(this, '<%= post.id %>')">
                                    
                                    <label for="add-more-<%= post.id %>" style="cursor: pointer; color: #aaa; font-size: 0.85rem;">
                                        <span id="label-text-<%= post.id %>">Click to select images</span>
                                    </label>
                                </div>
                                <button type="submit" class="btn-mini" style="background: var(--accent); width: 100%; height: 35px; margin-top: 10px;">
                                    UPLOAD NEW
                                </button>
                            </form>
                        <% } else { %>
                            <p style="color: #666; font-size: 0.8rem; text-align: center; background: #1a1a1a; padding: 10px; border-radius: 6px;">
                                Maximum limit of 5 images reached.
                            </p>
                        <% } %>
                    </div>

                </div>
            </div>
        <% } %>

    </div>
<% } %>




<script>
    function previewNewImages(input, postId) {
        const previewContainer = document.getElementById(`preview-container-${postId}`);
        const label = document.getElementById(`label-text-${postId}`);
        
        // Clear previous previews
        previewContainer.innerHTML = '';

        if (input.files && input.files.length > 0) {
            label.innerText = `${input.files.length} image(s) selected`;
            label.style.color = "var(--accent)";

            Array.from(input.files).forEach(file => {
                const reader = new FileReader();
                
                reader.onload = function(e) {
                    // Create a small wrapper for the preview
                    const imgWrapper = document.createElement('div');
                    imgWrapper.style.cssText = "position:relative; width:100%; aspect-ratio:1; border:1px solid #444; border-radius:4px; overflow:hidden;";
                    
                    const img = document.createElement('img');
                    img.src = e.target.result;
                    img.style.cssText = "width:100%; height:100%; object-fit:cover;";
                    
                    imgWrapper.appendChild(img);
                    previewContainer.appendChild(imgWrapper);
                }
                
                reader.readAsDataURL(file);
            });
        } else {
            label.innerText = "Click to select images";
            label.style.color = "#aaa";
        }
    }

    function updateAddCount(input, postId) {
        const label = document.getElementById(`label-text-${postId}`);
        if (input.files.length > 0) {
            label.innerText = `${input.files.length} image(s) selected`;
            label.style.color = "var(--accent)";
        }
    }

    function showSelectedCount(input, postId) {
        const count = input.files.length;
        const label = document.getElementById(`file-count-${postId}`);
        if (count > 0) {
            label.innerText = `${count} file(s) selected - Ready to upload`;
            label.style.color = "#4A90E2";
        }
    }

    function sharePost(postId) {
        const fullUrl = window.location.origin + '/forum/post/' + postId;
        
        navigator.clipboard.writeText(fullUrl).then(() => {
            const toast = document.getElementById("share-toast");
            toast.innerText = "Link copied to clipboard!";
            toast.className = "show";
            
            setTimeout(() => { 
                toast.className = toast.className.replace("show", ""); 
            }, 3000);
        }).catch(err => {
            console.error('Could not copy text: ', err);
        });
    }

    function openEditModal(postId) {
        document.getElementById(`edit-modal-${postId}`).style.display = 'flex';
        document.body.style.overflow = 'hidden';
    }

    function openViewModal(postId) {
        document.getElementById(`view-modal-${postId}`).style.display = 'flex';
        document.body.style.overflow = 'hidden';
    }

    function closeModal(modalId) {
        document.getElementById(modalId).style.display = 'none';
        document.body.style.overflow = 'auto';
    }
    
    window.onclick = function(event) {
        if (event.target.classList.contains('modal-overlay')) {
            event.target.style.display = 'none';
            document.body.style.overflow = 'auto';
        }
    }

    if (typeof initializeImageGallery === "function") {
        initializeImageGallery("popUpClass");
    }

    function toggleReadMore(postId) {
        const container = document.getElementById(`content-container-${postId}`);
        const btn = document.getElementById(`toggle-btn-${postId}`);
        
        if (container.classList.contains('expanded')) {
            container.classList.remove('expanded');
            btn.innerText = "Read More";
            // Scroll back to top of modal when collapsing
            btn.closest('.modal-content').scrollTop = 0;
        } else {
            container.classList.add('expanded');
            btn.innerText = "Read Less";
        }
    }

    function toggleDropdown(postId, show) {
        const list = document.getElementById(`edit-list-${postId}`);
        // Delay hiding slightly so the click event on the item registers
        if (!show) {
            setTimeout(() => { list.style.display = 'none'; }, 200);
        } else {
            list.style.display = 'block';
        }
    }

    function filterEditTags(inputElement, postId) {
        const searchTerm = inputElement.value.toLowerCase().trim();
        const dropdown = document.getElementById(`edit-list-${postId}`);
        const items = dropdown.querySelectorAll('.dropdown-item');
        
        dropdown.style.display = 'block';

        items.forEach(item => {
            const name = item.getAttribute('data-name');
            item.style.display = name.includes(searchTerm) ? 'block' : 'none';
        });
    }

    function addTag(id, title, postId) {
        const container = document.getElementById(`tag-container-${postId}`);
        
        // Prevent duplicates
        const existing = container.querySelector(`[data-id="${id}"]`);
        if (existing) return;

        // Create the Pill
        const pill = document.createElement('span');
        pill.className = 'tag-pill';
        pill.setAttribute('data-id', id);
        pill.innerHTML = `
            ${title}
            <input type="hidden" name="forumIds" value="${id}">
            <span class="remove-btn" onclick="removeTag(this)">Ã—</span>
        `;
        
        container.appendChild(pill);
    }

    function removeTag(element) {
        element.parentElement.remove();
    }

    // Close dropdown when clicking outside
    document.addEventListener('click', function(e) {
        if (!e.target.closest('.category-manager')) {
            document.querySelectorAll('.custom-dropdown').forEach(d => d.style.display = 'none');
        }
    });

</script>


