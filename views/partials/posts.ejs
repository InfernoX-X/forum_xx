<script>
    const tagStore = document.getElementById('tag-data-store');
    const allTags = JSON.parse(tagStore.getAttribute('data-tags'));

    const MANDATORY_HEADERS = [ "channel", "no. of people", "orientation", "age","ethnicity","locations","act", "emotions","scenario", "fetish", "actions", "sex positions", "finishing" ,"relationship", "profession", "body and features", "toys", "dress", "other"];

    function setupPostMandatory(postId) {
        const container = document.getElementById(`mandatory-groups-${postId}`);
        if (!container) return;
        
        container.innerHTML = '';
        const activePills = document.querySelectorAll(`#tag-container-${postId} .tag-pill`);
        const activeIds = Array.from(activePills).map(p => p.dataset.id.toString());

        MANDATORY_HEADERS.forEach(headerName => {
            const groupTags = allTags.filter(t => t.header.toLowerCase() === headerName);
            if (groupTags.length === 0) return;

            const wrapper = document.createElement('div');
            wrapper.className = 'custom-dropdown-static';
            wrapper.dataset.header = headerName; // Store header for easy lookup
            wrapper.style.position = 'relative';
            
            wrapper.innerHTML = `
                <label style="margin-bottom:5px; color:var(--accent); display:block; font-size:0.65rem; text-transform:uppercase;">${headerName}</label>
                <div class="dropdown-trigger" 
                    style="background:#111; border:1px solid #333; padding:8px; border-radius:4px; cursor:pointer; font-size:0.75rem; display:flex; justify-content:space-between; align-items:center;">
                    <span class="selected-text" style="max-width: 80%; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">Select...</span>
                    <span style="font-size: 8px;">â–¼</span>
                </div>
                <div class="dropdown-menu-edit" style="display:none; background:#1a1a1a; border:1px solid var(--accent); max-height:250px; overflow-y:auto; position:absolute; z-index:100; width:100%; box-shadow: 0 4px 15px rgba(0,0,0,0.5); border-radius: 4px; margin-top: 2px;">
                    <div style="padding: 5px; border-bottom: 1px solid #333; position: sticky; top: 0; background: #1a1a1a; z-index:10;">
                        <input type="text" placeholder="Filter ${headerName}..." 
                            style="width: 100%; background: #000; border: 1px solid #444; color: #fff; padding: 5px; font-size: 0.7rem; border-radius: 3px;"
                            oninput="filterDropdownOptions(this)">
                    </div>
                    <div class="options-container"></div>
                </div>
            `;
            
            const trigger = wrapper.querySelector('.dropdown-trigger');
            const menu = wrapper.querySelector('.dropdown-menu-edit');
            
            trigger.onclick = (e) => {
                e.stopPropagation();
                const isVisible = menu.style.display === 'block';
                document.querySelectorAll('.dropdown-menu-edit').forEach(m => m.style.display = 'none');
                menu.style.display = isVisible ? 'none' : 'block';
                if (!isVisible) menu.querySelector('input').focus();
            };

            container.appendChild(wrapper);
            // Initial render of options for this group
            renderDropdownOptions(wrapper, postId, activeIds);
        });
    }

    function renderDropdownOptions(wrapper, postId, activeIds) {
        const headerName = wrapper.dataset.header;
        const container = wrapper.querySelector('.options-container');
        const groupTags = allTags.filter(t => t.header.toLowerCase() === headerName);
        
        // Sort: Selected items first, then alphabetically
        const sortedTags = [...groupTags].sort((a, b) => {
            const aSel = activeIds.includes(a.id.toString());
            const bSel = activeIds.includes(b.id.toString());
            if (aSel && !bSel) return -1;
            if (!aSel && bSel) return 1;
            return a.title.localeCompare(b.title);
        });

        container.innerHTML = sortedTags.map(tag => {
            const checked = activeIds.includes(tag.id.toString()) ? 'checked' : '';
            return `
                <label class="option-item" style="display:flex; align-items:center; padding:10px; gap:10px; cursor:pointer; font-size:0.75rem; border-bottom:1px solid #222; ${checked ? 'background: rgba(var(--accent-rgb), 0.1);' : ''}">
                    <input type="checkbox" value="${tag.id}" data-title="${tag.title}" data-header="${headerName}" ${checked} 
                        style="accent-color: var(--accent);"
                        onchange="syncEditSelection(this, '${postId}')">
                    <span class="tag-label-text" style="${checked ? 'color: var(--accent); font-weight: bold;' : ''}">${tag.title}</span>
                </label>`;
        }).join('');

        // Update the trigger text
        const count = groupTags.filter(t => activeIds.includes(t.id.toString())).length;
        const textSpan = wrapper.querySelector('.selected-text');
        textSpan.innerText = count > 0 ? `Selected (${count})` : 'Select...';
        textSpan.style.color = count > 0 ? 'var(--accent)' : '#fff';
    }

    function updateDropdownUI(postId) {
        const tagContainer = document.getElementById(`tag-container-${postId}`);
        const activeIds = Array.from(tagContainer.querySelectorAll('.tag-pill')).map(p => p.dataset.id.toString());

        document.querySelectorAll(`#mandatory-groups-${postId} .custom-dropdown-static`).forEach(wrapper => {
            renderDropdownOptions(wrapper, postId, activeIds);
        });
    }

    // Filter inside a specific dropdown
    function filterDropdownOptions(input) {
        const val = input.value.toLowerCase();
        const options = input.closest('.dropdown-menu-edit').querySelectorAll('.option-item');
        options.forEach(opt => {
            const text = opt.querySelector('.tag-label-text').innerText.toLowerCase();
            opt.style.display = text.includes(val) ? 'flex' : 'none';
        });
    }

    function syncEditSelection(checkbox, postId) {
        const id = checkbox.value;
        const title = checkbox.dataset.title;
        const tagContainer = document.getElementById(`tag-container-${postId}`);

        // 1. Update Pills
        if (checkbox.checked) {
            if (!tagContainer.querySelector(`[data-id="${id}"]`)) {
                const pill = document.createElement('div');
                pill.className = 'tag-pill';
                pill.dataset.id = id;
                pill.innerHTML = `${title} <input type="hidden" name="forumIds" value="${id}"> <span onclick="removeEditTag(this, '${postId}', '${id}')">&times;</span>`;
                tagContainer.appendChild(pill);
            }
        } else {
            const pill = tagContainer.querySelector(`[data-id="${id}"]`);
            if (pill) pill.remove();
        }

        // 2. Refresh ALL dropdown counters & checkbox states for this ID
        // This handles the case where a search added a mandatory tag
        updateDropdownUI(postId);
    }

    function removeEditTag(span, postId, id) {
        span.parentElement.remove();
        updateDropdownUI(postId);
    }

    function handleSearch(input, postId) {
        const val = input.value.toLowerCase().trim();
        const dropdown = document.getElementById(`tagDropdown-${postId}`);
        dropdown.innerHTML = '';
        
        if (val.length < 1) { dropdown.style.display = 'none'; return; }

        // Removed the filter that excluded mandatory headers so they show in search too
        const matches = allTags.filter(t => t.title.toLowerCase().includes(val));

        matches.slice(0, 15).forEach(match => {
            const div = document.createElement('div');
            div.className = 'dropdown-item';
            div.style = "padding: 8px; cursor: pointer; border-bottom: 1px solid #222; font-size: 0.8rem;";
            div.innerHTML = `${match.title} <small style="float:right; opacity:0.5; color:var(--accent);">${match.header}</small>`;
            div.onclick = () => {
                syncEditSelection({checked: true, value: match.id, dataset: {title: match.title}}, postId);
                input.value = '';
                dropdown.style.display = 'none';
            };
            dropdown.appendChild(div);
        });
        dropdown.style.display = 'block';
    }

    window.addEventListener('click', (e) => {
        if (!e.target.closest('.custom-dropdown-static')) {
            document.querySelectorAll('.dropdown-menu-edit').forEach(m => m.style.display = 'none');
        }
    });

    function previewNewImages(input, postId) {
        const previewContainer = document.getElementById(`preview-container-${postId}`);
        const label = document.getElementById(`label-text-${postId}`);
        
        // Clear previous previews
        previewContainer.innerHTML = '';

        if (input.files && input.files.length > 0) {
            label.innerText = `${input.files.length} image(s) selected`;
            label.style.color = "var(--accent)";

            Array.from(input.files).forEach(file => {
                const reader = new FileReader();
                
                reader.onload = function(e) {
                    // Create a small wrapper for the preview
                    const imgWrapper = document.createElement('div');
                    imgWrapper.style.cssText = "position:relative; width:100%; aspect-ratio:1; border:1px solid #444; border-radius:4px; overflow:hidden;";
                    
                    const img = document.createElement('img');
                    img.src = e.target.result;
                    img.style.cssText = "width:100%; height:100%; object-fit:cover;";
                    
                    imgWrapper.appendChild(img);
                    previewContainer.appendChild(imgWrapper);
                }
                
                reader.readAsDataURL(file);
            });
        } else {
            label.innerText = "Click to select images";
            label.style.color = "#aaa";
        }
    }

    function updateAddCount(input, postId) {
        const label = document.getElementById(`label-text-${postId}`);
        if (input.files.length > 0) {
            label.innerText = `${input.files.length} image(s) selected`;
            label.style.color = "var(--accent)";
        }
    }

    function showSelectedCount(input, postId) {
        const count = input.files.length;
        const label = document.getElementById(`file-count-${postId}`);
        if (count > 0) {
            label.innerText = `${count} file(s) selected - Ready to upload`;
            label.style.color = "#4A90E2";
        }
    }

    function sharePost(postId) {
        const fullUrl = window.location.origin + '/forum/post/' + postId;
        
        navigator.clipboard.writeText(fullUrl).then(() => {
            const toast = document.getElementById("share-toast");
            toast.innerText = "Link copied to clipboard!";
            toast.className = "show";
            
            setTimeout(() => { 
                toast.className = toast.className.replace("show", ""); 
            }, 3000);
        }).catch(err => {
            console.error('Could not copy text: ', err);
        });
    }

    function openEditModal(postId) {
        setupPostMandatory(postId);
        document.getElementById(`edit-modal-${postId}`).style.display = 'flex';
        document.body.style.overflow = 'hidden';
    }
    
    function closeModal(modalId) {
        document.getElementById(modalId).style.display = 'none';
        document.body.style.overflow = 'auto';
    }
    
    window.onclick = function(event) {
        if (event.target.classList.contains('modal-overlay')) {
            event.target.style.display = 'none';
            document.body.style.overflow = 'auto';
        }
    }

    if (typeof initializeImageGallery === "function") {
        initializeImageGallery("popUpClass");
    }

</script>

<script>

    function formatCount(num) {
        if (num < 1000) return num.toString();
        
        const units = ['k', 'M', 'B', 'T'];
        let unitIndex = -1;
        let value = num;

        while (value >= 1000 && unitIndex < units.length - 1) {
            value /= 1000;
            unitIndex++;
        }

        // toFixed(1) gives us 1 decimal place (e.g. 1.2M)
        // replace(/\.0$/, '') removes the .0 if it's a whole number (e.g. 1M instead of 1.0M)
        return value.toFixed(1).replace(/\.0$/, '') + units[unitIndex];
    }


    async function handleVote(postId, voteType) {
    try {
        const response = await fetch('/forum/posts/vote', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ postId, voteType })
        });

        const data = await response.json();

        if (response.status === 401 || response.status === 403) {
            alert("Please login to vote!");
            return;
        }

        const postRow = document.getElementById(`post-${postId}`);
        const upCountSpan = postRow.querySelector('.up-count');
        const downCountSpan = postRow.querySelector('.down-count');
        const upSvg = postRow.querySelector('.upvote svg');
        const downSvg = postRow.querySelector('.downvote svg');

        // 1. Update the numbers immediately from backend data
        upCountSpan.innerText = formatCount(data.upvotes);
        downCountSpan.innerText = formatCount(data.downvotes);

        // 2. Clean Slate: Remove active classes and reset SVG colors
        [upCountSpan, downCountSpan].forEach(el => el.classList.remove('active'));
        
        upSvg.setAttribute('fill', 'none');
        upSvg.setAttribute('stroke', 'white');
        downSvg.setAttribute('fill', 'none');
        downSvg.setAttribute('stroke', 'white');

        // 3. Apply active state ONLY if the vote wasn't just removed
        if (data.message !== "Vote removed") {
            if (voteType === 1) {
                upCountSpan.classList.add('active');
                upSvg.setAttribute('fill', 'var(--vote_up)');
                upSvg.setAttribute('stroke', 'var(--vote_up)');
            } else if (voteType === -1) {
                downCountSpan.classList.add('active');
                downSvg.setAttribute('fill', 'var(--vote_down)');
                downSvg.setAttribute('stroke', 'var(--vote_down)');
            }
        }

    } catch (err) {
        console.error("Voting failed:", err);
    }
}
