<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
<link rel="icon" href="<%= favIcon %>">

<style>
    *{  
        margin: 0;
        padding: 0;
        box-sizing: border-box;   
    }
    :root {
        /* Global */
        /* accent #F93742 */
        --accent: rgb(249, 55, 66);
        --accent-hover: #ff4d57;
        --bg: #0f0f0f;
        --surface: transparent;
        --surface-elevated: #1c1c1c;
        --border: #262626;
        --text-main: #f1f1f1;
        --text-muted: #aaaaaa;
        --radius: 12px;

        /* Nav */
        --nav-bg: rgb(22, 22, 22);
        --dropdown-bg: #1e1e1e;
        --text-dim: #888;
        --border-color: #333;
        --input-bg: #2a2a2a;

        /* Contribute */
        --cx-bg: #000;
        --cx-surface: #111;
        --cx-border: #222;
        --cx-text-main: #FFF;
        --cx-text-muted: #888;
        --cx-input-bg: #080808;

        /* Single Post */
        --px-surface: #1a1a1a;

        /* Basic */
        --white: white;
        --black: black;
        --font-family: 'Inter', sans-serif;

        /* Vote */
        --vote_up: #4A90E2;
        --vote_down: #e24a4a;
    }

    html {
        scroll-behavior: smooth;
    }

    ::-webkit-scrollbar { width: 4px; }
    ::-webkit-scrollbar-track { background: var(--bg); }
    ::-webkit-scrollbar-thumb { background: var(--accent); border-radius: 10px; }
</style>